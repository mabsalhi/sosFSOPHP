{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Situation</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Echelon</th>
                <td>{{ entity.echelon }}</td>
            </tr>
            <tr>
                <th>Numeroindicatif</th>
                <td>{{ entity.numeroIndicatif }}</td>
            </tr>
            <tr>
                <th>Dateeffet</th>
                <td>{{ entity.dateEffet|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Salaireestimatif</th>
                <td>{{ entity.salaireEstimatif }}</td>
            </tr>
            <tr>
                <th>Remarques</th>
                <td>{{ entity.remarques }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('situation') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('situation_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('situation_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
