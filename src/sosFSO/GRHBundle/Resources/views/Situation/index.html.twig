{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Situation list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Echelon</th>
                <th>Numeroindicatif</th>
                <th>Dateeffet</th>
                <th>Salaireestimatif</th>
                <th>Remarques</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('situation_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.echelon }}</td>
                <td>{{ entity.numeroIndicatif }}</td>
                <td>{% if entity.dateEffet %}{{ entity.dateEffet|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.salaireEstimatif }}</td>
                <td>{{ entity.remarques }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('situation_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('situation_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('situation_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
